{
  "compilerOptions": {
    "declaration": true,
    "module": "esnext",
    "outDir": "./build/js",
    "rootDir": "src",
    "strict": true,
    "target": "es2022",
    "moduleResolution": "bundler",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "ts-node": {
    "esm": true
  }
}
